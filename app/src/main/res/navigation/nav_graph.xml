<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startedFragment">

    <fragment
        android:id="@+id/startedFragment"
        android:name="org.threehundredtutor.presentation.StartedFragment"
        android:label="StartedFragment">
        <action
            android:id="@+id/action_startedFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_startedFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/authorizationFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/authorizationFragment"
        android:name="org.threehundredtutor.presentation.authorization.AuthorizationFragment"
        android:label="AuthorizationFragment">
        <action
            android:id="@+id/action_authorizationFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/authorizationFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_authorizationFragment_to_registration"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_authorizationFragment_to_restorPasswordFragment"
            app:destination="@id/restorPasswordFragment" />
        <action
            android:id="@+id/action_authorizationFragment_to_solutionFragment"
            app:destination="@id/solutionFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="org.threehundredtutor.presentation.registration.RegistrationFragment"
        android:label="RegistrationFragment">
        <action
            android:id="@+id/action_registrationFragment_to_authorizationFragment"
            app:destination="@id/authorizationFragment"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registrationFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="org.threehundredtutor.presentation.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_homeFragment_to_solutionFragment"
            app:destination="@id/solutionFragment" />
    </fragment>
    <fragment
        android:id="@+id/restorPasswordFragment"
        android:name="org.threehundredtutor.presentation.restore.RestorePasswordFragment"
        android:label="RestorPasswordFragment">
        <action
            android:id="@+id/action_restorPasswordFragment_to_authorizationFragment"
            app:destination="@id/authorizationFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="org.threehundredtutor.presentation.account.AccountFragment"
        android:label="AccountFragment">
        <action
            android:id="@+id/action_accountFragment_to_authorizationFragment"
            app:destination="@id/authorizationFragment" />
    </fragment>
    <fragment
        android:id="@+id/solutionFragment"
        android:name="org.threehundredtutor.presentation.solution.SolutionFragment"
        android:label="SolutionFragment">
        <action
            android:id="@+id/action_solutionFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/photoDetailsFragment"
        android:name="org.threehundredtutor.presentation.PhotoDetailsFragment"
        android:label="fragment_photo_details"
        tools:layout="@layout/fragment_photo_details">

        <action
            android:id="@+id/action_photoDetailsFragment_to_solutionFragment"
            app:destination="@id/solutionFragment" />
    </fragment>
</navigation>
