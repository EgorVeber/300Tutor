<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/space_16">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_3"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@drawable/separator_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTestTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text="@string/result"
        android:textColor="?attr/secondary"
        android:textSize="@dimen/text_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/titlePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10"
        android:fontFamily="@font/roboto_medium"
        android:textColor="?attr/defaultBlack"
        android:textSize="@dimen/text_28"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/pieChart"
        app:layout_constraintEnd_toEndOf="@+id/pieChart"
        app:layout_constraintStart_toStartOf="@+id/pieChart"
        app:layout_constraintTop_toTopOf="@+id/pieChart" />

    <ir.mahozad.android.PieChart
        android:id="@+id/pieChart"
        android:layout_width="@dimen/pie_chart_size"
        android:layout_height="@dimen/pie_chart_size"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_12"
        app:holeRatio="0.85"
        app:labelType="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTestTv" />

    <View
        android:id="@+id/legendColorView"
        android:layout_width="@dimen/size_18"
        android:layout_height="@dimen/size_18"
        android:layout_marginEnd="@dimen/margin_12"
        android:background="?attr/primary"
        app:layout_constraintBottom_toBottomOf="@+id/legendTitleView"
        app:layout_constraintEnd_toStartOf="@+id/legendTitleView"
        app:layout_constraintTop_toTopOf="@+id/legendTitleView" />

    <TextView
        android:id="@+id/legendTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/points"
        android:textColor="?attr/textPrimary"
        android:textSize="@dimen/text_18"
        app:layout_constraintBottom_toBottomOf="@+id/pieChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/pieChart"
        app:layout_constraintTop_toTopOf="@+id/pieChart"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/resultTestRightQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_12"
        android:textColor="?attr/textPrimary"
        android:textSize="@dimen/text_18"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/legendColorView"
        app:layout_constraintTop_toBottomOf="@+id/legendColorView"
        tools:text="Вы правильно ответили на 3 из 5 вопросов." />

    <TextView
        android:id="@+id/percentResultInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12"
        android:textColor="?attr/textPrimary"
        android:textSize="@dimen/text_18"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="@+id/resultTestRightQuestion"
        app:layout_constraintTop_toBottomOf="@+id/resultTestRightQuestion"
        tools:text="Тест решен на 30%" />

    <TextView
        android:id="@+id/resultTestNeedToCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12"
        android:paddingHorizontal="@dimen/margin_12"
        android:textColor="?attr/textPrimary"
        android:textSize="@dimen/text_18"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pieChart"
        tools:text="Не проверен 1 вопрос. Его необходимо проверить dddсамому или с помощью куратора."
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>