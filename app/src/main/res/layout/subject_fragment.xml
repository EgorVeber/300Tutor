<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/accountToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/contentBackground"
        app:navigationIconTint="?attr/secondary"
        app:title="@string/main_menu_home_title"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TitleToolbarTextAppearance"
        app:titleTextColor="?attr/secondary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subjectRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin_6"
        android:layout_marginTop="@dimen/margin_8"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/subject_item" />
</LinearLayout>
