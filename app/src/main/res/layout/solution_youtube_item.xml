<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/contentBackground"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/space_4">

    <TextView
        android:id="@+id/answerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/video_title"
        android:textColor="@color/default_black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/openYoutube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:alpha="0.8"
        android:backgroundTint="#FF0000"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/video_action"
        android:textSize="@dimen/text_16"
        app:cornerRadius="@dimen/radius_8"
        app:icon="@drawable/ic_play_circle"
        app:iconGravity="textStart"
        app:iconSize="@dimen/size_24" />

</FrameLayout>
