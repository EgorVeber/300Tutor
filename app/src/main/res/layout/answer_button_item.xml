<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/contentBackground">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/answerResultButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:alpha="0.9"
        android:clickable="false"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="@dimen/radius_8"
        app:iconGravity="textStart"
        app:iconSize="@dimen/size_24"
        tools:icon="@drawable/ic_allmost_answer"
        tools:text="@string/allmost_the_right_answer" />
</FrameLayout>
