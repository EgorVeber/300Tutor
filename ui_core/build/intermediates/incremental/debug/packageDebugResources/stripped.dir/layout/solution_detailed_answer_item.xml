<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/contentBackground"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/solution_item_space_horizontal">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/answerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_12_background"
        android:fontFamily="@font/roboto"
        android:gravity="top"
        android:hint="@string/your_detailed_answer"
        android:maxLines="10"
        android:minLines="5"
        android:padding="@dimen/space_4"
        android:scrollbars="horizontal"
        android:textColor="?attr/textPrimary"
        android:textColorHint="?attr/textPrimary"
        android:theme="@style/EditTextCursorColor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_4"
        android:backgroundTint="?attr/primary"
        android:text="@string/answer_send_text"
        android:textSize="@dimen/text_16"
        app:cornerRadius="@dimen/radius_16" />

</LinearLayout>

