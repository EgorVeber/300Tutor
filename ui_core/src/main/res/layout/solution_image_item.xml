<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/contentBackground"
    android:paddingHorizontal="@dimen/solution_item_space_horizontal">

    <ImageView
        android:id="@+id/solutionImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_256"
        android:contentDescription="@string/solution_image"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_logo" />
</FrameLayout>
