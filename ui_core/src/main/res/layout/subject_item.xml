<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subjectLlContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/defaultWhite60"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:layout_marginVertical="@dimen/margin_8"
        android:background="@drawable/rectangle_12_content_background"
        android:paddingVertical="@dimen/margin_8">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:layout_marginStart="@dimen/margin_12"
            android:backgroundTint="?attr/background"
            app:cardCornerRadius="@dimen/radius_full"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iconSubject"
                android:layout_width="@dimen/size_36"
                android:layout_height="@dimen/size_36"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/subjectNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_12"
            android:text="Математика ЕГЭ"
            android:textColor="?attr/textPrimary"
            android:textSize="@dimen/text_20" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
