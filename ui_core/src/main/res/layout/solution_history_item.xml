<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subjectLlContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_2"
    android:layout_marginTop="@dimen/margin_4"
    android:layout_marginBottom="@dimen/margin_8"
    android:background="@drawable/rectangle_8_content_background"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/space_8"
    android:paddingTop="@dimen/space_6"
    android:paddingBottom="@dimen/space_8">

    <TextView
        android:id="@+id/nameTestTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/textPrimary"
        android:textSize="@dimen/text_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Глобальный тест по предмеasdasdasdasdasту ОБЖ ЕГЭ" />

    <TextView
        android:id="@+id/questionCountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:visibility="gone"
        android:fontFamily="@font/roboto"
        android:text="@string/question_count"
        android:textColor="?attr/textPrimary"
        app:layout_constraintStart_toStartOf="@+id/nameTestTv"
        app:layout_constraintTop_toBottomOf="@+id/nameTestTv"
        />

    <TextView
        android:id="@+id/startTestDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        app:layout_constraintTop_toBottomOf="@+id/questionCountTv"
        app:layout_constraintStart_toStartOf="@+id/questionCountTv"
        android:fontFamily="@font/roboto"
        android:textColor="?attr/textPrimary"
        tools:text="Дата начала: 17:58, 02.11.23 " />

    <TextView
        android:id="@+id/endTestDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2"
        android:textColor="?attr/textPrimary"
        app:layout_constraintStart_toStartOf="@+id/nameTestTv"
        app:layout_constraintTop_toBottomOf="@+id/startTestDateTv"
        tools:text="Дата завершения: 02.11.22 12:01" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupNotFinished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="groupEndDate,groupValidation" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="endTestDateTv,separatorDate" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupValidation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="pointWithTestTv,testIsSolvedPercentTv,issuesResolvedPercent" />

    <View
        android:id="@+id/separatorDate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_3"
        android:layout_marginTop="@dimen/margin_4"
        android:background="@drawable/separator_10"
        app:layout_constraintBottom_toTopOf="@+id/pointWithTestTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endTestDateTv" />

    <TextView
        android:id="@+id/pointWithTestTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:text="@string/logout"
        android:textColor="?attr/textPrimary"
        android:textSize="@dimen/text_16"
        app:layout_constraintStart_toStartOf="@+id/nameTestTv"
        app:layout_constraintTop_toBottomOf="@+id/separatorDate"
        tools:text="Получено 0 баллов из 7" />

    <TextView
        android:id="@+id/testIsSolvedPercentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2"
        android:text="@string/logout"
        android:textColor="?attr/textPrimary"
        android:textSize="@dimen/text_16"
        app:layout_constraintStart_toStartOf="@+id/nameTestTv"
        app:layout_constraintTop_toBottomOf="@+id/pointWithTestTv"
        tools:text="Тест решён на 0%." />

    <TextView
        android:id="@+id/issuesResolvedPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2"
        android:text="@string/logout"
        android:textColor="?attr/textPrimary"
        android:textSize="@dimen/text_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nameTestTv"
        app:layout_constraintTop_toBottomOf="@+id/testIsSolvedPercentTv"
        tools:text="Решено 0% вопросов" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:backgroundTint="?attr/primary"
        android:text="@string/go"
        android:textSize="@dimen/text_16"
        app:cornerRadius="@dimen/radius_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separatorDate" />
</androidx.constraintlayout.widget.ConstraintLayout>
