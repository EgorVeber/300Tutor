<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/courseLlContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/defaultWhite60"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:layout_marginVertical="@dimen/margin_8"
        android:background="@drawable/rectangle_12_content_background"
        android:paddingVertical="@dimen/margin_8">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:layout_marginStart="@dimen/margin_12"
            android:backgroundTint="?attr/background"
            app:cardCornerRadius="@dimen/radius_full"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iconCourse"
                android:layout_width="@dimen/size_36"
                android:layout_height="@dimen/size_36"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/courseNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:textColor="?attr/textPrimary"
            android:textSize="@dimen/text_20"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/courseProgress"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Искуственект интелект" />

        <TextView
            android:id="@+id/coursePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="?attr/defaultBlack"
            android:textSize="@dimen/text_18"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/courseProgress"
            app:layout_constraintEnd_toEndOf="@+id/courseProgress"
            app:layout_constraintStart_toStartOf="@+id/courseProgress"
            app:layout_constraintTop_toTopOf="@+id/courseProgress" />

        <ir.mahozad.android.PieChart
            android:id="@+id/courseProgress"
            android:layout_width="@dimen/size_56"
            android:layout_height="@dimen/size_56"
            android:layout_marginEnd="@dimen/margin_12"
            app:holeRatio="0.85"
            app:labelType="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
