<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_12"
        android:layout_marginVertical="@dimen/margin_6"
        android:background="@drawable/rectangle_16_content_background"
        android:paddingVertical="@dimen/margin_8">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size_36"
            android:layout_height="@dimen/size_36"
            android:layout_marginStart="@dimen/margin_12"
            android:backgroundTint="?attr/background"
            app:cardCornerRadius="@dimen/radius_full"
            app:cardElevation="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center"
                android:src="@drawable/ic_teacher"
                app:tint="?attr/primary" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_8"
            android:textColor="?attr/textPrimary"
            android:textSize="@dimen/text_20"
            tools:text="Математика ЕГЭ" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>