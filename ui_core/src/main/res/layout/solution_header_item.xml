<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_16_top_content_background"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/space_4">

    <TextView
        android:id="@+id/solutionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/secondary"
        android:textSize="@dimen/text_20"
        app:layout_constraintBottom_toBottomOf="@+id/favoriteImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/favoriteImage"
        tools:text="Вопрос 1" />

    <ImageView
        android:id="@+id/favoriteImage"
        android:layout_width="@dimen/size_36"
        android:layout_height="@dimen/size_36"
        android:layout_gravity="center"
        android:src="@drawable/ic_favorite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/defaultBlack40" />
</androidx.constraintlayout.widget.ConstraintLayout>