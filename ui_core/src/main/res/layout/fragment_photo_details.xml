<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/photoViewToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/defaultBlack"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="?attr/defaultWhite"
        app:title="@string/photo_detailed"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TitleToolbarTextAppearance"
        app:titleTextColor="?attr/defaultWhite" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photoView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/defaultBlack" />
</LinearLayout>
